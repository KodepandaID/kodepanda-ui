{
  "version": "independent",
  "registry": "https://registry.npmjs.org/",
  "publishConfig": {
    "access": "public"
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/__tests__/**",
    "**/*.md",
    "**/examples/**"
  ],
  "command": {
    "version": { "exact": true },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": ["**/examples/**", "**/tests/**"],
      "allowBranch": "master"
    }
  },
  "stream": true
}
