{
  "name": "@zenbu-ui/dropdown",
  "version": "0.1.6",
  "description": "Zenbu-UI - React UI components with easy customization, don't worry about CSS anymore.",
  "author": "Yudha Pratama <yudha.webdev@gmail.com>",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KodepandaID/zenbu-ui.git",
    "directory": "packages/dropdown"
  },
  "bugs": {
    "url": "https://github.com/KodepandaID/zenbu-ui/issues"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "concurrently yarn:build:*",
    "lint": "concurrently yarn:lint:*",
    "version": "yarn build",
    "build:esm": "cross-env BABEL_ENV=esm babel src --root-mode upward --extensions .js,.jsx -d dist/esm --source-maps --copy-files",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --root-mode upward --extensions .js,.jsx -d dist/cjs --source-maps --copy-files",
    "lint:src": "eslint src --ext .js,.jsx --config ../../.eslintrc.json"
  },
  "homepage": "https://github.com/KodepandaID/zenbu-ui#readme",
  "dependencies": {
    "@headlessui/react": "^1.4.1",
    "@zenbu-ui/classes": "0.1.3",
    "@zenbu-ui/divider": "0.1.5",
    "@zenbu-ui/types": "0.1.5",
    "@zenbu-ui/utils": "0.1.4",
    "clsx": "^1.1.1",
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "react": "^17.0.2"
  },
  "peerDependencies": {
    "react": "16.x || 17.x"
  },
  "eslintIgnore": [
    "node_modules",
    "dist"
  ]
}
