{
  "name": "zenbu-ui",
  "version": "0.1.0",
  "description": "Zenbu-UI - React UI components with easy customization, don't worry about CSS anymore.",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "design-system",
    "react-design-system",
    "react-component",
    "react-ui",
    "ui"
  ],
  "author": "Yudha Pratama Wicaksana <yudha.webdev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KodepandaID/zenbu-ui.git"
  },
  "scripts": {
    "pkg": "yarn manypkg run",
    "check:pkgs": "yarn manypkg check",
    "fix:pkgs": "yarn manypkg fix",
    "postinstall": "yarn check:pkgs",
    "prestart": "yarn && yarn bootstrap",
    "boot": "yarn prestart && yarn build",
    "start": "yarn storybook",
    "start:all": "yarn build && concurrently \"yarn docs dev\"  \"yarn storybook\" ",
    "build": "yarn lerna run build --no-private --stream",
    "lint": "yarn lerna run lint --no-private --stream",
    "lint:types": "yarn lerna run lint:types --no-private --stream",
    "prestorybook": "rimraf node_modules/.cache/storybook",
    "storybook": "start-storybook -p 6006",
    "clean": "yarn lerna clean --yes && yarn rimraf node_modules",
    "clean-dist": "yarn lerna exec rimraf dist",
    "bootstrap": "yarn lerna bootstrap --use-workspaces",
    "build:storybook": "build-storybook && sb extract"
  },
  "eslintIgnore": [
    "node_modules",
    "packages/*/**/dist"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "resolutions": {
    "postcss": "8.1.7",
    "react": "17.0.1"
  },
  "dependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@lerna/cli": "^4.0.0",
    "@manypkg/cli": "^0.18.0",
    "@preconstruct/cli": "^2.1.5",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-docs": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addons": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "autoprefixer": "^10.3.7",
    "babel-loader": "^8.2.3",
    "babel-plugin-transform-react-handled-props": "^2.1.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.30.0",
    "eslint-plugin-react": "^7.26.1",
    "lerna": "^4.0.0",
    "postcss": "^8.3.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.17"
  }
}
