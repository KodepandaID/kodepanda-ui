{
  "name": "kodepanda-ui",
  "version": "0.1.0",
  "description": "KodepandaUI - React UI components with easy customization, don't worry about CSS anymore.",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "design-system",
    "react-design-system",
    "react-component",
    "react-ui",
    "ui"
  ],
  "author": "Yudha Pratama Wicaksana <yudha.webdev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KodepandaID/kodepanda-ui.git"
  },
  "scripts": {
    "pkg": "manypkg run",
    "check:pkgs": "manypkg check",
    "fix:pkgs": "manypkg fix",
    "prestart": "yarn && yarn bootstrap",
    "boot": "yarn prestart && yarn build",
    "start": "yarn prebuild && yarn storybook",
    "storybook": "start-storybook -p 6006",
    "ver": "lerna version --no-push --exact",
    "lint:packages": "eslint packages",
    "lint": "yarn lint:packages",
    "clean": "lerna clean --yes && rimraf node_modules",
    "clean-dist": "yarn lerna exec -- rimraf dist",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "fix": "manypkg fix && preconstruct fix",
    "dev": "preconstruct dev && yarn start",
    "pc": "preconstruct",
    "postinstall": "manypkg check && preconstruct dev"
  },
  "eslintIgnore": [
    "node_modules",
    "packages/*/**/dist"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "resolutions": {
    "postcss": "8.1.7",
    "react": "17.0.1"
  },
  "dependencies": {
    "@babel/core": "^7.15.8",
    "@manypkg/cli": "^0.18.0",
    "@preconstruct/cli": "^2.1.5",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-docs": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addons": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "autoprefixer": "^10.3.7",
    "babel-loader": "^8.2.3",
    "eslint": "^7.30.0",
    "eslint-plugin-react": "^7.26.1",
    "lerna": "^4.0.0",
    "postcss": "^8.3.11",
    "postcss-loader": "^6.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^2.2.17"
  }
}
