{
  "private": true,
  "name": "zenbu-ui",
  "version": "0.0.1",
  "author": "Yudha Pratama Wicaksana <yudha.webdev@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint packages --ext .js,.ts,.tsx",
    "types:check": "tsc --skipLibCheck --noEmit",
    "test": "jest --maxWorkers=50%",
    "dev": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "parcel build 'packages/*/' --no-cache && yarn build:fix-type-defs",
    "build:css": "npx tailwindcss -o ./tailwind.css -c ./tailwind.config.js --minify",
    "build:fix-type-defs": "node ./scripts/fix-type-defs-imports",
    "clean": "yarn clean-dist && rimraf node_modules",
    "clean-dist": "manypkg exec rimraf dist",
    "reset": "rimraf .yarn/cache && rimraf .parcel-cache && yarn clean",
    "publish:stable": "yarn bump:stable && yarn build && yarn workspaces foreach -pv --exclude examples npm publish --tolerate-republish --access public",
    "publish:next": "yarn bump:next && yarn build && yarn workspaces foreach -pv --exclude examples npm publish --tolerate-republish --access public --tag next",
    "bump:stable": "yarn version apply --all",
    "bump:next": "yarn version apply --all --prerelease",
    "bump:check": "yarn version check"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-typescript": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/runtime": "^7.16.7",
    "@manypkg/cli": "^0.19.1",
    "@parcel/babel-plugin-transform-runtime": "^2.2.1",
    "@parcel/babel-preset-env": "^2.2.1",
    "@parcel/packager-ts": "^2.2.1",
    "@parcel/transformer-typescript-types": "^2.2.1",
    "@storybook/addon-storysource": "^6.4.9",
    "@storybook/react": "6.4.17",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/eslint": "^7.28.2",
    "@types/jest": "^27.0.2",
    "@types/jest-axe": "^3.5.3",
    "@types/node": "^17.0.14",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/rimraf": "^3",
    "@types/testing-library__jest-dom": "^5",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "framer-motion": "4.1.17",
    "jest": "^27.3.1",
    "jest-axe": "^5.0.1",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^12.0.2",
    "parcel": "^2.2.1",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "replace-in-files": "^3.0.0",
    "rimraf": "^3.0.2",
    "storybook-addon-performance": "^0.16.1",
    "tailwindcss": "^3.0.18",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "resolutions": {
    "chokidar": "3.4.3"
  },
  "engines": {
    "node": ">=12",
    "yarn": ">=2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/packages"
    ],
    "testMatch": [
      "**/?(*.)+(test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "@zenbu-ui/(.+)$": "<rootDir>packages/$1/src"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/scripts/setup-tests.ts",
      "jest-axe/extend-expect"
    ]
  },
  "prettier": {
    "printWidth": 100
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "import/no-anonymous-default-export": [
        1,
        {
          "allowObject": true
        }
      ],
      "react/jsx-pascal-case": [
        2,
        {
          "allowNamespace": true
        }
      ],
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "prefer-const": [
        1,
        {
          "destructuring": "all"
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules",
    "dist"
  ],
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --quiet --fix --cache"
  }
}
